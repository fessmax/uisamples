<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              xmlns:custom="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@android:color/black"
              android:orientation="vertical"
              tools:context=".MainActivity">


    <fessmax.samples.textinputlayoutcustom.TextInputLayoutCustom
            android:layout_gravity="center_vertical"
            style="@style/Til"
            android:id="@+id/tilc_email"
            android:inputType="textEmailAddress"
            android:hint="Email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    <fessmax.samples.textinputlayoutcustom.TextInputLayoutCustom
            android:id="@+id/tilc_pass"
            style="@style/Til"
            android:hint="Password"
            android:inputType="textPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <ImageView
                android:background="@color/green"
                android:layout_gravity="center_vertical"
                android:id="@+id/check_email"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:text="Error email"/>

        <ImageView
                android:background="@color/red"
                android:id="@+id/check_pass"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:text="Error password"/>

    </LinearLayout>
</LinearLayout>